<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head', {tabTitle: 'Admin-products'}) %>

<body>

<!-- ======================= Empieza Navbar ============================= -->
    <%- include('partials/header') %>

<!-- ======================= Termina Navbar ============================= -->



    <section class="admin-product__section-product">

        <h1 class="register__subtitle--h2">Admin Product</h1>

        <div class="admin-product__div--product">
            
            <form class="admin-product__form" id="form-product" onsubmit="addProduct(event)">
                <div class="admin-product__div--product">
                    <label class="admin-product__label" for="nameLabel">Titulo</label>
                    <input class="admin-product__input" id="name" type="text" required>
                </div>

                <div class="admin-product__div--product">
                    <label  class="admin-product__label" for="desLabel">Descripcion</label>
                    <textarea name="description" id="desArea" cols="60" rows="10" required></textarea>
                </div>

                <div class="admin-product__div--product">
                    <label class="admin-product__label" for="category">Categoria</label><br>
                    <select name="category" id="category"  class="admin-product__input" required>
                        <option value="" selected></option>
                        <option value="buzo">Buzo</option>
                        <option value="remera">Remera</option>        
                    </select>
                </div>

                <div class="admin-product__div--product">
                    <label for="priceLabel" class="admin-product__label" 
                    >Precio</label>
                    <input class="admin-product__input" id="priceLabel" name="price" type="number" required>
                </div>
                
                <div class="admin-product__div--product">
                    <label class="admin-product__label" for="imageLabel">Imagen</label>
                    <input class="admin-product__input" type="text" name="file" id="imageLabel" value="/Assets/page-notifier/not-found.png" required
                    >
                
                </div>

                    <button class="admin-product__btn" id="btnProduct"> Cargar </button>
            </form>

            <div class="admin-product__table-div">
                <table class="admin-product__table">
                    <thead>
                        <tr>
                            <td class="admin-product__td">Imagen</td>
                            <td class="admin-product__td">Producto</td>
                            <td class="admin-product__td">Descripcion</td>
                            <td class="admin-product__td">Precio</td>
                            <td class="admin-product__td">Acciones</td>
                        </tr>
                    </thead>
                    <tbody id="tableBody"></tbody>
                </table>
            </div>

        </div>

    </section>








    <!-- ========================== Inicio Footer =============================== -->

    <%- include('partials/footer') %>

<!-- ========================== Final Footer =============================== -->

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script> 
    <script src="/js/admin/admin-product.js"></script>
    <script src="/js/funcionality/alert.js"></script>
    <script src="/js/funcionality/header.js"></script>
    <script src="/js/admin/is.admin.js"></script>
</body>
</html>